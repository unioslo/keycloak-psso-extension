<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <!-- =======================
         PostgreSQL version
    ========================== -->
    <changeSet id="1-create-psso-device-table-postgresql" author="francis">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
        </preConditions>

        <createTable tableName="psso_device">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="realm_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="device_udid" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="category" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="serial_number" type="VARCHAR(128)"/>
            <column name="registered_by" type="VARCHAR(128)"/>

            <column name="signing_key_id" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="encryption_key_id" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="signing_key" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="encryption_key" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="key_exchange_key" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="creation_time" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_psso_realm" tableName="psso_device">
            <column name="realm_id"/>
        </createIndex>

        <createIndex indexName="idx_psso_udid" tableName="psso_device">
            <column name="device_udid"/>
        </createIndex>

        <createIndex indexName="idx_psso_signing_key_id" tableName="psso_device">
            <column name="signing_key_id"/>
        </createIndex>

        <createIndex indexName="idx_psso_encryption_key_id" tableName="psso_device">
            <column name="encryption_key_id"/>
        </createIndex>
    </changeSet>



    <!-- =======================
         MariaDB version
    ========================== -->
    <changeSet id="1-create-psso-device-table-mariadb" author="francis">
        <preConditions onFail="MARK_RAN">
            <dbms type="mariadb"/>
        </preConditions>

        <createTable tableName="psso_device">
            <column name="id" type="BIGINT AUTO_INCREMENT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="realm_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="device_udid" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="category" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="serial_number" type="VARCHAR(128)"/>
            <column name="registered_by" type="VARCHAR(128)"/>

            <column name="signing_key_id" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="encryption_key_id" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="signing_key" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="encryption_key" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="key_exchange_key" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="creation_time" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_psso_realm" tableName="psso_device">
            <column name="realm_id"/>
        </createIndex>

        <createIndex indexName="idx_psso_udid" tableName="psso_device">
            <column name="device_udid"/>
        </createIndex>

        <createIndex indexName="idx_psso_signing_key_id" tableName="psso_device">
            <column name="signing_key_id"/>
        </createIndex>

        <createIndex indexName="idx_psso_encryption_key_id" tableName="psso_device">
            <column name="encryption_key_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
