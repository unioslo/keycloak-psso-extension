<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog>
<changeSet id="2-add-serial-number-to-psso-device" author="francis">
    <addColumn tableName="psso_device">
        <column name="serial_number" type="VARCHAR(128)"/>
    </addColumn>

    <createIndex indexName="idx_psso_device_serial_number"
                 tableName="psso_device"
                 unique="true">
        <column name="serial_number"/>
        <renameColumn tableName="psso_device"
                      oldColumnName="device_uuid"
                      newColumnName="device_udid"
                      columnDataType="VARCHAR(128)"/>
    </createIndex>
</changeSet>
</databaseChangeLog>